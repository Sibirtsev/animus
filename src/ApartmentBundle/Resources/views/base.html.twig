{% extends "::base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/global.css') }}">
{% endblock %}

{% block body %}
    {% block nav %}
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                            data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">Aminus apartments</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li {% if app.request.get('_route') == 'list' %} class="active"{% endif %}><a href="{{ path('list') }}">Home</a></li>
                        <li {% if app.request.get('_route') == 'create' %} class="active"{% endif %}><a href="{{ path('create') }}">Add new</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    {% endblock %}

    <div class="container">
        {% block content %}
        {% endblock %}
    </div>

    {% block footer %}
        <footer class="footer">
            <div class="container">
                <p class="text-muted">&copy; Alexey Sibirtsev, 2017</p>
            </div>
        </footer>
    {% endblock %}
{% endblock %}